// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model SystemSettings {
  id                    String   @id @default("global")
  defaultCommissionRate Float    @default(10.0)
  
  // Marketplace Business Details (NL Hub)
  companyName           String?  @default("Saleor Marketplace NL")
  vatNumber             String?  @default("NL812345678B01")
  addressLine1          String?  @default("Keizersgracht 123")
  addressCity           String?  @default("Amsterdam")
  addressZip            String?  @default("1016 CJ")
  addressCountry        String?  @default("NL")
  
  ossEnabled            Boolean  @default(true)
  ossThreshold          Decimal  @default(10000.00) @db.Decimal(12, 2)
  
  updatedAt             DateTime @updatedAt
}

model VendorProfile {
  id                    String   @id @default(cuid())
  brandAttributeValue   String   @unique // The ID or Slug of the Brand in Saleor
  brandName             String   // Display name
  
  // Tax Details
  vatNumber             String?
  countryCode           String   @default("NL")
  isVatVerified         Boolean  @default(false)
  vatVerifiedAt         DateTime?
  companyType           CompanyType @default(BUSINESS)
  address               String?

  commissionRate        Float    @default(10.0)
  temporaryCommissionRate   Float?
  temporaryCommissionEndsAt DateTime?
  selfBillingAgreed     Boolean  @default(false)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  commissions           Commission[]
}

enum CompanyType {
  BUSINESS
  INDIVIDUAL
}

model Commission {
  id              String         @id @default(cuid())
  orderId         String         @unique
  vendorProfileId String
  vendorProfile   VendorProfile  @relation(fields: [vendorProfileId], references: [id])
  
  // Financial specifics
  orderGrossTotal Decimal        @db.Decimal(12, 2)
  orderNetTotal   Decimal?       @db.Decimal(12, 2)
  orderVatTotal   Decimal?       @db.Decimal(12, 2)
  orderVatRate    Float?         // The VAT rate applied to the order (e.g. 21.0)
  
  // OSS Tracking
  destinationCountry String?     // Target EU country for OSS reporting
  isOss           Boolean        @default(false)

  commissionAmount Decimal       @db.Decimal(12, 2)
  commissionNet    Decimal?      @db.Decimal(12, 2)
  commissionVat    Decimal?      @db.Decimal(12, 2)
  
  rate            Float?
  currency        String         @default("EUR")
  status          CommissionStatus @default(PENDING)
  
  createdAt       DateTime       @default(now())
}

model TaxRate {
  id            String   @id @default(cuid())
  countryCode   String   @unique
  standardRate  Float
  reducedRate   Float?
  updatedAt     DateTime @updatedAt
}

enum CommissionStatus {
  PENDING
  PAID
  CANCELLED
}

model InvoiceLog {
  id        String   @id @default(cuid())
  orderId   String
  type      InvoiceType
  url       String
  metadata  Json?    // Stores specific vat breakdown for historical reference
  createdAt DateTime @default(now())
}

enum InvoiceType {
  CUSTOMER
  COMMISSION
}

// APL Storage for Scaleor App SDK
model SaleorApp {
  id           String   @id @default(cuid())
  saleorApiUrl String   @unique // The domain for the Saleor instance
  token        String   // The auth token
  appId        String   // The app ID
  jwks         String?  // JSON Web Key Set
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Admin Authentication
model AdminUser {
  id               String   @id @default(cuid())
  email            String   @unique
  password         String   // bcrypt hashed
  name             String
  twoFactorSecret  String?
  twoFactorEnabled Boolean  @default(false)
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

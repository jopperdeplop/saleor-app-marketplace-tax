// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model VendorProfile {
  id                    String   @id @default(cuid())
  brandAttributeValue   String   @unique // The ID or Slug of the Brand in Saleor
  brandName             String   // Display name
  vatNumber             String?
  address               String?
  commissionRate        Float    @default(10.0)
  selfBillingAgreed     Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  commissions           Commission[]
}

model Commission {
  id              String         @id @default(cuid())
  orderId         String         @unique
  vendorProfileId String
  vendorProfile   VendorProfile  @relation(fields: [vendorProfileId], references: [id])
  amount          Decimal        @db.Decimal(12, 2)
  currency        String         @default("EUR")
  status          CommissionStatus @default(PENDING)
  createdAt       DateTime       @default(now())
}

enum CommissionStatus {
  PENDING
  PAID
  CANCELLED
}

model InvoiceLog {
  id        String   @id @default(cuid())
  orderId   String
  type      InvoiceType
  url       String
  createdAt DateTime @default(now())
}

enum InvoiceType {
  CUSTOMER
  COMMISSION
}

// APL Storage for Scaleor App SDK
model SaleorApp {
  id           String   @id @default(cuid())
  saleorApiUrl String   @unique // The domain for the Saleor instance
  token        String   // The auth token
  appId        String   // The app ID
  jwks         String?  // JSON Web Key Set
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

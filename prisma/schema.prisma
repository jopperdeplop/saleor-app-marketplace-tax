generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model SystemSettings {
  id                    String   @id @default("global")
  defaultCommissionRate Float    @default(10.0)
  companyName           String?  @default("Saleor Marketplace NL")
  vatNumber             String?  @default("NL812345678B01")
  addressLine1          String?  @default("Keizersgracht 123")
  addressCity           String?  @default("Amsterdam")
  addressZip            String?  @default("1016 CJ")
  addressCountry        String?  @default("NL")
  ossEnabled            Boolean  @default(true)
  updatedAt             DateTime @updatedAt
  ossThreshold          Decimal  @default(10000.00) @db.Decimal(12, 2)
}

model VendorProfile {
  id                        String       @id @default(cuid())
  brandAttributeValue       String       @unique
  brandName                 String
  vatNumber                 String?
  address                   String?
  commissionRate            Float        @default(10.0)
  selfBillingAgreed         Boolean      @default(false)
  createdAt                 DateTime     @default(now())
  updatedAt                 DateTime     @updatedAt
  countryCode               String       @default("NL")
  isVatVerified             Boolean      @default(false)
  temporaryCommissionEndsAt DateTime?
  temporaryCommissionRate   Float?
  companyType               CompanyType  @default(BUSINESS)
  vatVerifiedAt             DateTime?
  commissions               Commission[]
}

model Commission {
  id                 String           @id @default(cuid())
  orderId            String           @unique
  vendorProfileId    String
  currency           String           @default("EUR")
  status             CommissionStatus @default(PENDING)
  createdAt          DateTime         @default(now())
  commissionAmount   Decimal          @db.Decimal(12, 2)
  commissionNet      Decimal?         @db.Decimal(12, 2)
  commissionVat      Decimal?         @db.Decimal(12, 2)
  orderGrossTotal    Decimal          @db.Decimal(12, 2)
  orderNetTotal      Decimal?         @db.Decimal(12, 2)
  orderVatTotal      Decimal?         @db.Decimal(12, 2)
  rate               Float?
  destinationCountry String?
  isOss              Boolean          @default(false)
  orderVatRate       Float?
  vendorProfile      VendorProfile    @relation(fields: [vendorProfileId], references: [id])
}

model TaxRate {
  id           String   @id @default(cuid())
  countryCode  String   @unique
  standardRate Float
  reducedRate  Float?
  updatedAt    DateTime @updatedAt
}

model InvoiceLog {
  id        String      @id @default(cuid())
  orderId   String
  type      InvoiceType
  url       String
  createdAt DateTime    @default(now())
  metadata  Json?
}

model SaleorApp {
  id           String   @id @default(cuid())
  saleorApiUrl String   @unique
  token        String
  appId        String
  jwks         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AdminUser {
  id               String   @id @default(cuid())
  email            String   @unique
  password         String
  name             String
  twoFactorSecret  String?
  twoFactorEnabled Boolean  @default(false)
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum CompanyType {
  BUSINESS
  INDIVIDUAL
}

enum CommissionStatus {
  PENDING
  PAID
  CANCELLED
}

enum InvoiceType {
  CUSTOMER
  COMMISSION
}
